{
  "name": "@utilitycss/atomic",
  "version": "0.8.0",
  "author": "Andrea Moretti (@axyz) <axyzxp@gmail.com>",
  "description": "Atomic CSS composition for yarn workspaces",
  "repository": "utilitycss/atomic",
  "license": "MIT",
  "main": "dist",
  "bin": {
    "atomic": "index.js"
  },
  "scripts": {
    "prepublish": "npm run build-ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@utilitycss/utility": "^0.5.0",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "commander": "^4.1.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "handlebars": "^4.5.3",
    "inquirer": "^7.0.3",
    "mkdirp-promise": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-combine-duplicated-selectors": "^8.1.0",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-discard-empty": "^4.0.1",
    "postcss-for": "^2.1.1",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.4",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/mkdirp-promise": "^5.0.0",
    "husky": "^4.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "lint-staged": "^9.5.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-config --write",
      "git add"
    ],
    "*.ts": [
      "prettier --no-config --write",
      "tslint -c tslint.json -p tsconfig.json --fix",
      "git add"
    ]
  }
}
