{
  "name": "@utilitycss/atomic",
  "version": "0.20.1",
  "author": "Andrea Moretti (@axyz) <axyzxp@gmail.com>",
  "description": "Atomic CSS composition for yarn workspaces",
  "repository": "utilitycss/atomic",
  "license": "MIT",
  "main": "dist",
  "bin": {
    "atomic": "./bin/index.js"
  },
  "engines": {
    "node": ">=14.5.5"
  },
  "preferGlobal": true,
  "scripts": {
    "prepublish": "npm run build",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "lint": "eslint './src/**/*.{js,ts,tsx}'",
    "build": "tsc",
    "build:watch": "tsc -w"
  },
  "dependencies": {
    "@utilitycss/css-mqpacker": "^0.0.1",
    "@utilitycss/utility": "^1.2.3",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "clear": "^0.1.0",
    "cli-spinners": "^2.6.0",
    "commander": "^7.1.0",
    "cssnano": "5.0.0-rc.1",
    "cssnano-preset-advanced": "^5.0.0-rc.1",
    "figlet": "^1.5.0",
    "handlebars": "^4.7.7",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "ora": "^5.4.0",
    "postcss-discard-empty": "^5.0.0-rc.1",
    "postcss-modules": "^4.0.0"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/commander": "^2.12.2",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.20",
    "@types/listr": "^0.14.2",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "debug": "^4.3.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "open": "^7.4.2",
    "postcss": "8.2.13",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --no-config --write",
      "eslint --fix"
    ]
  }
}
