.singleNesting {
  color: red
}

  .singleNesting .child,
  .singleNesting .sibling {
    color: blue;
  }

.deepNesting {
  color: red
}

.deepNesting .child {
    color: blue
  }

.deepNesting .child .grandchild {
      color: green;
    }

.classCombination {
  font-size: 1em
}

.classCombination.modifier {
    font-size: 2em;
  }

.complex {
  font-size: 1em
}

.complex.modifier {
    color: red;
  }

.complex {
    display: flex;
  }

.complex .child {
    font-size: 0.5em
  }

.complex .child.childModifier {
      color: blue
    }

.complex .child.childModifier .nested {
        color: green;
      }

.nestedPseudo {
  color: red
}

.nestedPseudo:hover {
    color: blue
  }

.nestedPseudo:hover .hoverChild {
      color: green
    }

.nestedPseudo:hover .hoverChild.hoverChildModifier {
        font-size: 2em
      }

.nestedPseudo:hover .hoverChild.hoverChildModifier:after {
          content: "after";
          position: absolute;
        }
