:import("@my-org/simple-class/module.css") {
  single: single-declaration;
  multiple: multiple-declarations;
}

:root {
  --large: 4em;
}

.localClass {
  height: 100%;
}

.localComposes {
  composes: localClass;
  composes: fontWeightBold from "@my-org/electrons";

  text-decoration: underline;
}

.simpleComposes {
  composes: single;
}

.complexComposes {
  composes: single multiple localComposes;
  composes: black white_hover from "@my-org/electrons";
}

.extend {
  composes: multiple;

  font-size: var(--large);
}
